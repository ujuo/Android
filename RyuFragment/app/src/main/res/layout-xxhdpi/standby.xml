<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity = "center|start"
    android:background="#FF000000"
    android:id="@+id/standby">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="AM"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="30dp"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#FF000000"
            android:text="12:22"
            android:textColor="@android:color/white"
            android:textSize="45dp" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="3dp">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/weatherImage"
            android:layout_marginLeft="130dp"
            android:src="@drawable/standby"/>

        <TextView
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:id="@+id/standbyText"
            android:layout_toRightOf="@id/weatherImage"
            android:background="#FF000000"
            android:text="13"/>

        <TextView
            android:id="@+id/standbyText1"
            android:layout_width="10dp"
            android:layout_height="20dp"
            android:background="#FF000000"
            android:textColor="@android:color/white"
            android:layout_toRightOf="@id/standbyText"
            android:text="°C"
            android:textSize="7dp"
            android:layout_marginTop="2dp"

            tools:text="°C"
            tools:textAlignment="textStart"
            tools:textSize="7dp" />
    </RelativeLayout>

</LinearLayout>