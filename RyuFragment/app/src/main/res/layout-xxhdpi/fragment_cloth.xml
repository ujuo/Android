<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="180dp"
        android:layout_height="100dp"
        android:background="@drawable/bg_cloth"
        android:orientation="vertical">

        <TextView
            android:layout_width="70dp"
            android:layout_height="15dp"
            android:id="@+id/text_cloth"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="8dp"
            android:text="Clothing Care"
            android:textSize="9dp"
            android:textStyle="normal"
            android:textColor="#ffffffff"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_airshot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="42dp"
                android:text="Air Shot"
                android:textColor="#ffffffff"
                android:textSize="6dp"
                android:textStyle="normal" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:id="@+id/text_num"
                android:layout_marginLeft="4dp"
                android:text="59"
                android:textSize="33dp"
                android:textStyle="normal"
                android:textColor="#ffffffff"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text_min"
                android:layout_marginLeft="0dp"
                android:text="Min"
                android:textSize="6dp"
                android:textColor="#ffffffff"
                android:textStyle="normal"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:orientation="horizontal"
            android:layout_marginTop="18dp"
            android:layout_marginLeft="9dp">

            <TextView
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:id="@+id/airshower"
                android:text="Air Shower"
                android:textSize="6dp"
                android:textColor="#ffffffff"
                android:textStyle="normal"
                android:layout_marginRight="0dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:id="@+id/dualclean"
                android:text="Dual Clean"
                android:textSize="6dp"
                android:textStyle="normal"
                android:textColor="#ffffffff"
                android:layout_toRightOf="@id/airshower"/>

            <TextView
                android:id="@+id/tm"
                android:layout_width="6dp"
                android:layout_height="20dp"
                android:layout_marginRight="0dp"
                android:text="TM"
                android:textColor="#ffffffff"
                android:textSize="3dp"
                android:textStyle="normal"
                android:layout_toRightOf="@id/dualclean" />

            <TextView
                android:layout_width="35dp"
                android:layout_height="30dp"
                android:id="@+id/airdry"
                android:text="Air Dry"
                android:textSize="6dp"
                android:textStyle="normal"
                android:textColor="#ffffffff"
                android:gravity="center_horizontal"
                android:layout_toRightOf="@id/tm"
                android:layout_marginRight="2dp"/>

            <TextView
                android:layout_width="45dp"
                android:layout_height="30dp"
                android:id="@+id/airsmoothing"
                android:text="Air Smoothing"
                android:textSize="6dp"
                android:textStyle="normal"
                android:textColor="#ffffffff"
                android:layout_toRightOf="@id/airdry"
                android:layout_marginRight="0dp"/>


        </RelativeLayout>




    </LinearLayout>


</RelativeLayout>